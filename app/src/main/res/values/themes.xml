<resources>
    <!-- Base application theme. -->
    <style name="Theme.ChitChat" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/primary_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorAccent">@color/accent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/backgroundC</item>
        <item name="android:windowBackground">@color/backgroundC</item>
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:forceDarkAllowed" >false</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Dialog">
        <item name="android:windowEnterAnimation">@anim/enter_d</item>
        <item name="android:windowExitAnimation">@anim/exit_d</item>
    </style>

    <style name="TransParentWindow" parent="Theme.ChitChat">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/trans</item>
    </style>
</resources>